{
  "manifest_version": 3,
  "name": "Where am I?",
  "version": "1.0.0",
  "description": "Where are you? In production? In homologation? In localhost? Not have doubt!",
  "homepage_url": "https://regivaldo.com.br",
  "icons": {
    "16": "src/assets/images/16x16.png",
    "32": "src/assets/images/32x32.png",
    "48": "src/assets/images/48x48.png",
    "128": "src/assets/images/128x128.png"
  },
  "author": "regivaldorfs@gmail.com",
  "background": {
    "service_worker": "src/js/background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {              
      "16": "src/assets/images/16x16.png",   
      "24": "src/assets/images/24x24.png",   
      "32": "src/assets/images/32x32.png"    
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": [
        "/src/css/whereami.css"
      ],
      "run_at": "document_start"
    }
  ],
  "options_page": "src/view/options.html",
  "host_permissions": ["<all_urls>", "*://*/*"],
  "permissions": ["activeTab", "scripting"],
  "cross_origin_embedder_policy": {
    "value": "require-corp"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}
